<section class="main-header">
  <div class="hero">
    <%= image_tag 'logo.png', class: 'img-responsive' %>
    <br>
    <hr>
    <h1>Brothers, Fathers<br>Sons and Friends</h1>
    <h3>Men making a difference in their community.</h3>
    <hr>
    <br>
    <a href="#next"><p>Learn More</p><i class="fa fa-angle-down fa-3x"></i></a>
  </div>
</section>
<section id="next">
  <h1>Home</h1>
  <div id="contact">
    <div class="contact_form_hidden" style="display:none;">
      <h2>Thanks</h2>
    </div>
    <div class="contact_form_shown">
      <h2>Contact Us</h2>
      <%= simple_form_for Contact.new, html: { novalidate: true }, remote: true do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs">
          <div class="row">
            <div class="col-xs-12">
              <%= f.input :name, label: false, placeholder: "Name" %>
            </div>
          </div>
          <div class="row">
            <div class="col-xs-12">
              <%= f.input :email, label: false, placeholder: "Email"  %>
            </div>
          </div>
          <div class="row">
            <div class="col-xs-12">
              <%= f.input :phone_number, label: false, placeholder: "Phone Number"  %>
            </div>
          </div>
          <div class="row">
            <div class="col-xs-12">
              <%= f.input :message, label: false, placeholder: "Message"  %>
            </div>
          </div>
        </div>
        <div class="form-actions">
          <%= f.button :submit, :name => 'commit', :id=>"person_create_form_submit"  %>
        </div>
      <% end %>
    </div>
  </div>
</section>




<%= link_to 'New Team registration', new_team_registration_path %>


<script type="text/javascript">
  $('#person_create_form_submit').closest('form').on('ajax:success', function() {
    $(".contact_form_shown").hide(200)
    $(".contact_form_hidden").show(200)
    console.log('ajax:success!');
  })
</script>
